<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:radius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/txtNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nombre_de_la_universidad"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txtCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/categor_a"
            android:layout_marginTop="4dp"
            android:textColor="#555555" />

        <TextView
            android:id="@+id/txtCiudad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ciudad"
            android:layout_marginTop="4dp"
            android:textColor="#555555" />

        <TextView
            android:id="@+id/txtWeb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/web"
            android:layout_marginTop="4dp"
            android:autoLink="web"
            android:textColor="#1a0dab" />

        <TextView
            android:id="@+id/txtRector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rector"
            android:layout_marginTop="4dp"
            android:textColor="#555555" />

        <TextView
            android:id="@+id/txtTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tel_fono"
            android:layout_marginTop="4dp"
            android:textColor="#555555" />

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:layout_marginTop="4dp"
            android:textColor="#555555" />

        <TextView
            android:id="@+id/txtAcceso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/acceso"
            android:layout_marginTop="4dp"
            android:textColor="#555555" />

        <TextView
            android:id="@+id/txtNumCarreras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/carreras"
            android:layout_marginTop="4dp"
            android:textColor="#555555" />

        <TextView
            android:id="@+id/txtNumSedes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sedes"
            android:layout_marginTop="4dp"
            android:textColor="#555555" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
